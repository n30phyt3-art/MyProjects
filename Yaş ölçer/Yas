using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication4
{
    class Program
    {
        static void Main(string[] args)
        {
            double rakam1, rakam2;
            Console.WriteLine("rakam");
            rakam1 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("rakam2");
            rakam2 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Toplama : {0} Bolme : {1} Cikma : {2}, Carpma {3} ", rakam1+rakam2,rakam1/rakam2,rakam1-rakam2,rakam1*rakam2);
            Console.ReadKey();


        }
    }
}
